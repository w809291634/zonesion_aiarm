{
    "version": "2.0.0",
    "tasks": [
      /**************catkin_make release version*************/
      {
        "type": "shell",
        "label": "catkin_make release",
        "command": "catkin_make",
        "args": [
          "-DCATKIN_WHITELIST_PACKAGES='aiarm'"
        ],
        "options": {
          "cwd": "${workspaceFolder}/../../"
        },
        "group": "build",
        "problemMatcher": []
      },
      /**************catkin_make debug version*************/
      {
        "type": "shell",
        "label": "catkin_make debug",
        "command": "catkin_make",
        "args": [
          "-DCMAKE_BUILD_TYPE=Debug",
          "-DCATKIN_WHITELIST_PACKAGES='aiarm'"
        ],
        "options": {
          "cwd": "${workspaceFolder}/../../" 
        },
        "group": "build"
      },
    ]
}


  

